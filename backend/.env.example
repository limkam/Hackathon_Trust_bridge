# ============================================
# TrustBridge Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/trustbridge_db

# ============================================
# JWT AUTHENTICATION
# ============================================
# Secret key for JWT token generation
# IMPORTANT: Change this in production! Use a strong, random secret key.
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# JWT algorithm (usually HS256)
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# SOLANA BLOCKCHAIN CONFIGURATION
# ============================================
# Solana RPC endpoint
# For development: https://api.devnet.solana.com
# For production: https://api.mainnet-beta.solana.com (or your own RPC node)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Path to Solana wallet keypair file
# Default location: ~/.config/solana/id.json
WALLET_PATH=~/.config/solana/id.json

# ============================================
# SOLANA PROGRAM IDs
# ============================================
# These are set after deploying your Solana programs
# Certificate Registry Program ID
CERTIFICATE_PROGRAM_ID=D7SYneSxju3iTtJW9HPQMVjQRXgTCZi2vR2UWRk8nTRa

# Startup Registry Program ID
STARTUP_PROGRAM_ID=DqwhC5DDZZmL4E1f4YYQJ9R121NurZV8ttk2dfGoYnTj

# Investment Ledger Program ID
INVESTMENT_PROGRAM_ID=FEQJZDk4afcXbSrRj7iW3PieNtrmeT2Hjtt5BCmoNfRr

# ============================================
# BLOCKCHAIN SCRIPTS PATH
# ============================================
# Path to blockchain scripts directory (relative to backend/)
BLOCKCHAIN_SCRIPTS_PATH=../blockchain/scripts

# ============================================
# AI SERVICE
# ============================================
# Mistral AI API key for AI-powered CV enhancements
# Get your key from: https://console.mistral.ai/
# Note: Optional - app will work without it but AI features will be disabled
MISTRAL_API_KEY=

# ============================================
# JOB SEARCH APIs
# ============================================
# RemoteOK: Free public API - no key needed!
# Freelancer.com: OAuth required (to be implemented)
# No configuration needed - jobs work out of the box!

# ============================================
# APPLICATION SETTINGS
# ============================================
# Application name
APP_NAME=TrustBridge API

# Application version
APP_VERSION=1.0.0

# Debug mode (set to False in production)
DEBUG=True

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
# Directory for uploaded files (relative to backend/)
UPLOAD_DIR=static/uploads

# Maximum upload size in bytes (default: 5MB)
MAX_UPLOAD_SIZE=5242880

# Allowed image types (comma-separated)
# Note: This is handled in code, but documented here for reference
# ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# ============================================
# NOTES
# ============================================
# - All optional API keys can be left empty - the app will use database jobs
# - Database URL must be set correctly for the app to work
# - SECRET_KEY should be changed in production
# - In production, set DEBUG=False
# - The app will automatically create the UPLOAD_DIR if it doesn't exist
